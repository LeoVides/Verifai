
<h1>Result Details</h1>

<div class="row">
  <div class="col col-6 col-md-4 col-lg-4">
    <%= render "results/card", result: @result %>
    <div class="text-start mt-4">
    </div>
  </div>
</div>

<div class="d-flex align-items-center gap-2">
  <div data-controller="clipboard" data-clipboard-feedback-text-value="Copied!">
    <input class="form-control visually-hidden" data-clipboard-target="input" type="text" value="http://127.0.0.1:3000/results/history/<%= @result.id %>" readonly>
    <div class="input-group-append">
      <button id="copy-button" class="btn btn-outline-primary px-3 py-2 d-flex align-items-center" data-action="click->clipboard#copy">
        <i class="fas fa-paper-plane"></i>
      </button>
    </div>
  </div>

  <!-- Delete functionality -->

  <% if current_user %>
    <%= link_to result_path(@result),
                data: { turbo_confirm: "Are you sure you want to delete this result?", turbo_method: :delete },
                class: "btn btn-danger px-3 py-2 d-flex align-items-center" do %>
      <i class="fa-solid fa-trash"></i>
    <% end %>
  <% end %>
</div>
