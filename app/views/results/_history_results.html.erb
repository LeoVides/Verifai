<div class="row">
  <% if results.any? %>
    <% results.each do |result| %>
      <div class="col col-6 col-md-4 col-lg-4">
        <%= link_to result_history_path(result), class: "card-container", data: { turbo: false } do %>
        <%= render "results/card", result: result %>
        <% end %>
         <%# <%= link_to 'View Details', result_history_path(result), class: "btn btn-primary mt-3", data: {turbo: false} %>
      </div>
    <% end %>
  <% else %>
    <p>No results found 🔎</p>
  <% end %>
</div>
