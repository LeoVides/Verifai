        <div class="menu-item">
          <div class="menu-button">
            <img
              loading="lazy"
              src="https://cdn.builder.io/api/v1/image/assets/e7215202aad14fd5bc906c5d98e426f9/1ab0550efd96d080bb5dc8483f2d627a983368d567f24b8ab0736bd5437f1731?apiKey=e7215202aad14fd5bc906c5d98e426f9&"
