<div class="d-flex">
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon flex-column vh-100 position-fixed">
    <div class="container-fluid d-flex flex-column justify-content-between h-100">
      <!-- Menu Items Wrapper -->
      <ul class="navbar-nav flex-column">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Home", root_path , class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Fact check", results_path , class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "History", history_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Hot topics", results_hot_topics_path , class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>

      <!-- Avatar Wrapper -->
      <% if user_signed_in? %>
        <div class="avatar-wrapper d-flex align-items-center">
          <a href="#" class="avatar hidden position-relative">
            <% if current_user.profile_picture.attached? %>
              <%= cl_image_tag current_user.profile_picture.key, class: "avatar rounded-circle", alt: "User Avatar" %>
            <% else %>
               <img src="https://cdn.vectorstock.com/i/500p/08/19/gray-photo-placeholder-icon-design-ui-vector-35850819.jpg"
                      alt="Placeholder Avatar"
                      class="avatar-placeholder-picture"
                      style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover;">
            <% end %>
            <!-- Badge system  -->
            <div class="checker-points position-absolute bottom-0 end-0">
              <% if current_user.checker_score >= 30 %>
                <i class="fa-solid fa-award fa-lg fa-beat shadow" style="color: gold;"></i>
                <% elsif current_user.checker_score >= 15 %>
                <i class="fa-solid fa-award fa-lg fa-beat shadow" style="color: silver;"></i>
                <% elsif current_user.checker_score >= 5 %>
                <i class="fa-solid fa-award fa-lg fa-beat shadow" style="color: #cd8031;"></i>
              <% end %>
            </div>
            <!-- Badge system end  -->
          </a>
          <%= link_to current_user.username, edit_user_registration_path , class: "profile-text ms-3 hidden" %>


        </div>
      <% end %>
    </div>
  </div>
</div>
